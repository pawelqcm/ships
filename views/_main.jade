.container
  nav#gameNav.navbar.navbar-dark.bg-primary
    .navbar-header
      span.navbar-brand Ahoy #{user.name}!
    .collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-left
        li.nav-item.pull-left
          a#do.newGameTooltip.nav-link(onclick='newGame("#{user.name}")' data-toggle="tooltip" data-placement="bottom" title="New game")
            i.fa.fa-play-circle
        li.nav-item.pull-left
          a#refreshTooltip.nav-link(onclick='(function() { location.reload() })()' data-toggle="tooltip" data-placement="bottom" title="Refresh list")
            i.fa.fa-refresh
      ul.nav.navbar-nav.navbar-right
        li.nav-item.pull-right
          a#signOutTooltip.nav-link(href="logout" data-toggle="tooltip" data-placement="bottom" title="Leave ships")
            i.fa.fa-sign-out
        li.nav-item.pull-right
          a.nav-link(data-toggle="modal" data-target="#help")
            #helpTooltip(style="position: absolute; left: 0; top: 0; width: 100%; height: 100%; z-index: 1000" data-toggle="tooltip" data-placement="bottom" title="Show help")
            i.fa.fa-question-circle
  include _helper
  table#gameTable.table.table-striped.menu
    thead
      tr
        th(colspan="5").text-center Meanwhile, at the sea..
    tbody#gameList
      tr
        td(colspan="5" style='opacity: .5').text-center
          i.fa.fa-2x.fa-ship.text-center(style='display: block')
          | No games available for now..

  script.
    animateMainContent();
